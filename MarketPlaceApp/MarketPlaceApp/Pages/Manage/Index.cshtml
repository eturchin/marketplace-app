@page
@model MarketPlace.Pages.Manage.IndexModel

<h1>All Users</h1>

<table class="table">
    <thead>
    <tr>
        <th>Login</th>
        <th>Email</th>
        <th>Role</th>
        <th>LastModified</th>
        <th>Manage</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Login</td>
            <td>@user.Email</td>
            <td>@user.Role.Name</td>
            <td>@user.LastModified</td>
            <td>
                <a asp-page="/Manage/EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a asp-page="/Manage/UpdateUsersPassword" asp-route-id="@user.Id" class="btn btn-primary">Update Password</a>
                <a asp-page="/Manage/DeleteUser" asp-route-id="@user.Id" class="btn btn-primary disabled">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
